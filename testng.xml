<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Heroku App" parallel="tests">
    <test name="Sanity Testing" thread-count="5">
        <classes>
            <class name="org.hquijano.tests.LandingPageTest"/>
            <class name="org.hquijano.tests.FormAuthPageTest"/>
            <!-- Other test classes -->
        </classes>
    </test>
    <test name = "Login Test" thread-count="5">
        <classes>
            <class name="org.hquijano.tests.FormAuthPageTest">
                <methods>
                    <exclude name="testInvalidPassword"/>
                    <exclude name="testLogin.*"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>